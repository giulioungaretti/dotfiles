export PATH="$HOME/.tmuxifier/bin:$PATH"
eval "$(tmuxifier init -)"
alias vim="reattach-to-user-namespace vim"
alias start='tmuxifier load-session my-awesome-session'
alias ghub="mosh giulio@188.166.36.190-- screen -dr"
# export go path variables
export GOPATH=$HOME/Hack/go
# add go executables to path
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$HOME/bin


function pomodoro {
  case $1 in
    start )
      echo 'terminal-notifier -title "🍅 Pomodoro Done" -message "Starting short break…"' | at + 25 minutes &> /dev/null
      ;;
 
    break )
      echo 'terminal-notifier -title "⌛ Short Break Done" -message "Start your next Pomodoro."' | at + 5 minutes &> /dev/null
      ;;
  esac
}
